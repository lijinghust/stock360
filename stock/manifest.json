{
  "manifest_version": 2,
  "name": "股票小助手",
  "version": "1.0.2",
  "description": "办公室看盘炒股利器，不会被上司发现的看盘软件",

  "permissions": ["tabs", "cookies", "storage", "*://*/*" ],
  "browser_action": {
    "default_icon": {
      "19" : "images/logo19.png",
      "38" : "images/logo38.png",
      "48" : "images/logo48.png",
      "128" : "images/logo128.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' https://*.cnzz.com; object-src 'self'",
  "update_url": "http://upext.chrome.360.cn/intf.php?method=ExtUpdate.query"
}